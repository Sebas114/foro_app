<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Iniciar sesión</h1>
            </div>
            <img src="/img/escudo.png" class="logo mx-auto d-block m-4" alt="Logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="car-header ">
            <h3 class="card-title align-center">Editar Tema</h3>
        </div>
        <div class="card-body">
            <form action="/topics/edit-topic/{{topic._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" value="{{topic.title}}"> 
                </div>
                <div class="form-group">
                    <textarea  name="description" class="form-control" placeholder="Descripción"> {{topic.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
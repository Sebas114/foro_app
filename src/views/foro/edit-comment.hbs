<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="car-header ">
            <h3 class="card-title align-center">Editar comentario</h3>
        </div>
        <div class="card-body">
            <form action="/comment/edit-comment/{{topic}}/{{comment._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <textarea  name="comentario" class="form-control" placeholder="Nuevo comentario"> {{comment.comentario}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>